@model ExtendedCountryModel;


<div class="flex flex-col p-4 gap-3 md:flex-row lg:gap-6 md:justify-center">
    <img class="h-32 w-full md:w-3/6 md:h-3/6" src="@Model.flags["png"]" />
    <div class="flex flex-col gap-3">
    <p class="text-3xl font-bold tracking-wider text-gray-800 dark:text-white">@Html.DisplayFor(m=>m.name.official)</p>
        <p class="text-xl font-semibold text-gray-700 dark:text-white">
        @Html.DisplayFor(m=>m.population) Population
    </p>
        <p class="text-lg text-gray-700 dark:text-white">
        Region: <span>@Html.DisplayFor(m=>m.region)</span>
    </p>
        <p class="text-lg text-gray-700 dark:text-white">
        Capital: <span>@Model.capital.First()</span>
    </p>
    <div class="flex flex-col gap-1">
            <p class="text-lg font-semibold text-gray-700 dark:text-white">Currencies</p>
        <ul class="">
            @foreach (var cr in Model.currencies)
            {
                    <li class="text-md text-gray-700 dark:text-white">* @cr.Value.name (@cr.Value.symbol)</li>
            }
        </ul>
    </div>
    <div class="flex flex-col gap-1">
            <p class="text-lg font-semibold text-gray-700 dark:text-white">Languages</p>
        <ul class="">
            @foreach (var l in Model.languages)
            {
                 <li class="text-md text-gray-700 dark:text-white">* @l.Value</li>
            }
        </ul>
    </div>
    <div class="flex flex-col gap-1">
            <p class="text-lg font-semibold text-gray-700 dark:text-white">Border Countries</p>
        <ul class=" md:grid md:grid-cols-3 ">
            @foreach (var bc in Model.borders)
            {
                <li class="text-md text-gray-700 dark:text-white">* @bc</li>
            }
        </ul>
    </div>
    </div>

</div>
