@model ExtendedCountry;




@if (Model != null)
{
    
    <div class="flex flex-col p-4 gap-3 md:flex-row lg:gap-6 md:justify-center">
        @if (Model.flags != null)
        {
            <img class="h-64 w-full md:w-3/6 md:h-3/6" src="@Model.flags["png"]" />
        }
        <div class="flex flex-col gap-3">
            <p class="text-3xl font-bold tracking-wider text-gray-800 dark:text-white">@Html.DisplayFor(m=>m.name.nativeName.FirstOrDefault().Value.official)</p>
            <p class="text-xl font-semibold text-gray-700 dark:text-white">
                @Model.population.ToString("n0") Population
            </p>
            <p class="text-lg text-gray-700 dark:text-white">
                Region: <span>@Model.region</span>
            </p>
            <div class="flex flex-col gap-1">
                <p class="text-lg font-semibold text-gray-700 dark:text-white">Captial (s)</p>
                <ul class="">
                    @if (Model.capital != null)
                    {
                        @foreach (var cp in Model.capital)
                        {
                            <li class="text-md text-gray-700 dark:text-white">* @cp</li>
                        }
                    }

                </ul>
            </div>
            <div class="flex flex-col gap-1">
                <p class="text-lg font-semibold text-gray-700 dark:text-white">Currencies</p>
                <ul class="">
                    @if (Model.currencies != null)
                    {
                        @foreach (var cr in Model.currencies)
                        {
                            <li class="text-md text-gray-700 dark:text-white">* @cr.Value.name (@cr.Value.symbol)</li>
                        }
                    }

                </ul>
            </div>
            <div class="flex flex-col gap-1">
                <p class="text-lg font-semibold text-gray-700 dark:text-white">Languages</p>
                <ul class="">
                    @if (Model.languages != null)
                    {
                        @foreach (var l in Model.languages)
                        {
                            <li class="text-md text-gray-700 dark:text-white">* @l.Value</li>
                        }
                    }

                </ul>
            </div>
            <div class="flex flex-col gap-1">
                <p class="text-lg font-semibold text-gray-700 dark:text-white">Border Countries</p>
                <ul class="grid grid-cols-2 md:grid-cols-3 ">
                    @if (Model.borders != null)
                    {
                        @foreach (var bc in Model.borders)
                        {
                            <li class="text-md text-gray-700 dark:text-white">* @bc</li>
                        }
                    }

                </ul>
            </div>
        </div>

    </div>

}else{
    <div class="flex justify-center">
        <p class="m-4 text-lg text-center text-gray-800 dark:text-white md:w-2/3">@ViewBag.errorMessage</p>
    </div>
}
